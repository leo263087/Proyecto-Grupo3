<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.DefinirPropiedades"
             Title="Definir Propiedades"
             Shell.TitleColor="White">
    <VerticalStackLayout>
        <Label Text="Selecciona una subcategoría" 
               FontAttributes="Bold"
               FontSize="18"
               Margin="0,10,0,0"
               TextColor="#007ACC"/>
        <Picker
    x:Name="CategoriaPicker"
    Title="Selecciona una categoría"
    ItemDisplayBinding="{Binding Nombre}"
    SelectedIndexChanged="OnCategoriaSeleccionada"
    WidthRequest="200"/>


        <ScrollView>
            <StackLayout x:Name="PropiedadesStack" Padding="20"/>
        </ScrollView>
        <Button Text="Confirmar"
                Clicked="OnConfirmarClicked"
                BackgroundColor="#007ACC"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
