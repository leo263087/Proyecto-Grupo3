<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.DefinirPropiedades"
             Title="Definir Propiedades"
             BackgroundColor="#2D3A4B">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Button
              Text="←"
              FontSize="40"
              BackgroundColor="Transparent"
              TextColor="White"
              HorizontalOptions="Start"
              VerticalOptions="Start"
              Clicked="OnCerrarClicked"
              Padding="0,0,0,0"
              WidthRequest="35"
              HeightRequest="48"/>

        <Label Text="Selecciona una subcategoría" TextColor="White" 
               FontAttributes="Bold"
               FontSize="18"
               Margin="0,10,0,0"
               />
       
        <Label Text="Subcategoría:" FontAttributes="Bold" TextColor="White"/>
       <Picker x:Name="SubcategoriaPicker"
        Title="Selecciona una subcategoría"
        TextColor="White"
        TitleColor="White"
        ItemsSource="{Binding Subcategorias}"
        ItemDisplayBinding="{Binding Nombre}"
        SelectedIndexChanged="OnSubcategoriaSeleccionada" />


        <Label Text="Propiedades:" FontAttributes="Bold" TextColor="White"/>
        <VerticalStackLayout x:Name="PropiedadesStack"  Spacing="10"/>
        <Button Text="Confirmar"
        Clicked="OnConfirmarClicked"
        BackgroundColor="#007ACC"
        TextColor="White"
        HeightRequest="50"
        CornerRadius="10"/>

       



        <VerticalStackLayout x:Name="PropiedadesStack2" Spacing="10"/>

       
    </VerticalStackLayout>
</ContentPage>
