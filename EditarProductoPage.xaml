<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.EditarProductoPage"
             Title="Editar Producto"
             BackgroundColor="#2D3A4B">
              
    <VerticalStackLayout Padding="20" Spacing="15">
        <Button
              Text="←"
              FontSize="40"
              BackgroundColor="Transparent"
              TextColor="White"
              HorizontalOptions="Start"
              VerticalOptions="Start"
              Clicked="OnCerrarClicked"
              Padding="0,0,0,0"
              WidthRequest="40"
              HeightRequest="48"/>  
        
        <Label Text="ID" />
        <Entry Text="{Binding ID}" IsReadOnly="True" />

        <Label Text="Nombre" />
        <Entry Text="{Binding Nombre}" />

        <Label Text="Descripción" />
        <Entry Text="{Binding Descripcion}" />

        <Label Text="Cantidad" />
        <Entry Text="{Binding Cantidad}" Keyboard="Numeric" />

        <Label Text="Precio" />
        <Entry Text="{Binding Precio}" Keyboard="Numeric" />

        <!-- Puedes agregar aquí edición de propiedades específicas si lo deseas -->
        <Label Text="Propiedades de la subcategoría" FontAttributes="Bold" Margin="0,20,0,0"/>
        <CollectionView x:Name="PropiedadesCollectionView"
                 ItemsSource="{Binding PropiedadesEspecificas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Key}" WidthRequest="120"/>
                        <Entry Text="{Binding Value, Mode=TwoWay}" WidthRequest="180"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Guardar Cambios"
                Clicked="OnGuardarClicked"
                BackgroundColor="#007ACC"
                TextColor="White"
                WidthRequest="180"
                HeightRequest="45"/>
    </VerticalStackLayout>
</ContentPage>
