<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.EditarProductoPage"
             Title="Editar Producto">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="ID" />
        <Entry Text="{Binding ID}" IsReadOnly="True" />

        <Label Text="Nombre" />
        <Entry Text="{Binding Nombre}" />

        <Label Text="Descripción" />
        <Entry Text="{Binding Descripcion}" />

        <Label Text="Cantidad" />
        <Entry Text="{Binding Cantidad}" Keyboard="Numeric" />

        <Label Text="Precio" />
        <Entry Text="{Binding Precio}" Keyboard="Numeric" />

        <!-- Puedes agregar aquí edición de propiedades específicas si lo deseas -->

        <Button Text="Guardar Cambios"
                Clicked="OnGuardarClicked"
                BackgroundColor="#007ACC"
                TextColor="White"
                WidthRequest="180"
                HeightRequest="45"/>
    </VerticalStackLayout>
</ContentPage>
