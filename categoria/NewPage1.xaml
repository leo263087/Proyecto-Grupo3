<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.categoria.NewPage1"
             Title="Inventario">
    <VerticalStackLayout>
        <!-- Título de la página -->
        <Label 
            Text="Lista de productos"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            AutomationProperties.IsInAccessibleTree="False" 
            FlowDirection="LeftToRight" />

        <!-- Barra de búsqueda -->
        <SearchBar Placeholder="Buscar por nombre o ID"
                   Text="{Binding TextoBusqueda, Mode=TwoWay}" />

        <!-- Lista de productos -->
        <CollectionView ItemsSource="{Binding ProductosFiltrados}" SelectionMode="Single" SelectionChanged="OnSeleccionProducto">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#0066CC" CornerRadius="10">
                        <Grid ColumnDefinitions="*,Auto">

                            <!-- Información del producto -->
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="{Binding Descripcion}" FontSize="14"/>
                                <Label Text="{Binding Categoria}" FontSize="12" TextColor="Black"/>
                            </VerticalStackLayout>

                            <!-- Botón de eliminación al extremo derecho -->
                            <Button Grid.Column="1" 
                                    Text="Eliminar"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    Command="{Binding Path=BindingContext.EliminarProductoCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Detalles del producto seleccionado -->
        <Frame x:Name="DetallesFrame" IsVisible="False" Padding="15" BackgroundColor="LightBlue" Margin="10">
            <VerticalStackLayout>
                <Label x:Name="NombreLabel" FontSize="24" FontAttributes="Bold"/>
                <Label x:Name="IDLabel" FontSize="18"/>
                <Label x:Name="DescripcionLabel" FontSize="16"/>
                <Label x:Name="CategoriaLabel" FontSize="14" TextColor="Gray"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
