<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.categoria.NewPage1"
             Title="Inventario">
    <VerticalStackLayout>
        <Label 
            Text="Lista de productos"
            VerticalOptions="Center" 
            HorizontalOptions="Center" AutomationProperties.IsInAccessibleTree="False" FlowDirection="LeftToRight" />
        <StackLayout x:Name="BarContainer" Orientation="Vertical"/>
        <CollectionView ItemsSource="{Binding Productos}" SelectionMode="Single" SelectionChanged="OnProductSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#0066CC">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                            <Label Text="{Binding Descripcion}" FontSize="14"/>
                            <Label Text="{Binding Categoria}" FontSize="12" TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



        <!-- Detalles del producto seleccionado -->
        <Frame x:Name="DetallesFrame" IsVisible="False" Padding="15" BackgroundColor="LightBlue" Margin="10">
            <VerticalStackLayout>
                <Label x:Name="NombreLabel" FontSize="24" FontAttributes="Bold"/>
                <Label x:Name="IDLabel" FontSize="18"/>
                <Label x:Name="DescripcionLabel" FontSize="16"/>
                <Label x:Name="CategoriaLabel" FontSize="14" TextColor="Gray"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>