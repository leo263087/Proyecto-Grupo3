<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.categoria.NewPage1"
             Title="Inventario"
             BackgroundColor="#2D3A4B">

    <VerticalStackLayout>
        <Button
         Text="←"
         FontSize="40"
         BackgroundColor="Transparent"
         TextColor="White"
         HorizontalOptions="Start"
         VerticalOptions="Start"
         Clicked="OnVolverClicked"
         Padding="0,0,0,0"
         WidthRequest="65"
         HeightRequest="48"/>   

        <!-- Barra de búsqueda -->
        <SearchBar Placeholder="Buscar por nombre o ID"
                   Text="{Binding TextoBusqueda, Mode=TwoWay}" TextColor="White"/>

        <!-- Lista de productos -->
        <CollectionView ItemsSource="{Binding ProductosFiltrados}" 
                SelectionMode="Single"
              >




            <CollectionView.ItemTemplate>
                <DataTemplate>
                    
                    <Frame Padding="10" Margin="5" BackgroundColor="#0066CC" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProductoTapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Información del producto -->
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="{Binding Descripcion}" FontSize="14"/>
                                <Label Text="{Binding Categoria.Nombre}" FontSize="12" TextColor="White"/>
                                <Label Text="{Binding ID}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>
                            <!-- Botón de eliminación al extremo derecho -->
                            <HorizontalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="End">
                                <Button
                                ImageSource="trash2.png"
                                BackgroundColor="Transparent"
                                Command="{Binding Path=BindingContext.EliminarProductoCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}"
                                WidthRequest="48"
                                HeightRequest="48"
                                Padding="0"
                                ContentLayout="Top,0"/>
                                

                                <Button 
                       
                                 ImageSource="editar.png"
                                 Clicked="OnEditarProductoClicked"
                                 CommandParameter="{Binding .}"
                                 BackgroundColor="Transparent"
                                 TextColor="White"
                                 WidthRequest="55"
                                 HeightRequest="88"
                                 FontSize="12"/>    
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
