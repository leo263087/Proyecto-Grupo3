<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Grupo3.MainPage"
             Title="Gestión de Productos"
             Background="#1A2028">

    <Grid RowDefinitions="Auto, *, Auto"
          ColumnDefinitions="*"
          Padding="20">

        <!-- Campo para ingresar productos -->
        <Entry Grid.Row="0"
               Grid.Column="0"
               Placeholder="Ingrese nuevo producto"
               x:Name="NewItemEntry"
               Margin="0,0,0,10"/>

        <!-- Campo para ingresar término de búsqueda -->
        <Entry Grid.Row="0"
               Grid.Column="0"
               Placeholder="Buscar producto"
               x:Name="SearchEntry"
               Margin="0,10,0,10"/>

        <!-- Contenedor para centrar los botones -->
        <VerticalStackLayout Grid.Row="2"
                             Grid.Column="0"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            <!-- Botón para agregar productos -->
            <Button Text="Agregar Producto"
                    Background="#0066CC"
                    Clicked="OnAddClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,10"/>

     

            <!-- Botón para navegar a la segunda página -->
            <Button Text="Ir a la segunda página"
                    Background="#0066CC"
                    Clicked="OnNavigateButtonClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,10"/>
        </VerticalStackLayout>

        <!-- ListView para mostrar productos -->
        <ListView Grid.Row="1"
                  Grid.Column="0"
                  x:Name="ItemsListView"
                  SelectionMode="Single"
                  Margin="0,10,0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
